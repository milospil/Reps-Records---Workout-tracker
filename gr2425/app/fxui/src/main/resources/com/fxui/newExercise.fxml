<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<VBox fx:id="newExercisePage" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="568.0" prefWidth="320.0" style="-fx-background-color: #333333;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fxui.NewExerciseController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="10" style="-fx-padding: 10;">
         <children>
            <Hyperlink onAction="#handleCloseButton" prefHeight="26.0" prefWidth="158.0" style="-fx-text-fill: white;" text="Close" underline="true" />
            <Label fx:id="newExerciseLabel" prefHeight="32.0" prefWidth="255.0" styleClass="header-class-two" stylesheets="@styles.css" text="New Exercise" textFill="WHITE" />
         </children>
         <padding>
            <Insets left="100.0" right="10.0" />
         </padding>
      </HBox>
      <Line endX="320.0" stroke="WHITE" />

      <!-- Name Label and TextField -->
      <Label alignment="CENTER" prefWidth="320.0" style="-fx-text-fill: white; -fx-font-size: 20px;" styleClass="header-class-two" stylesheets="@styles.css" text="Name:">
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin></Label>
      <TextField fx:id="newExerciseName" alignment="CENTER" prefWidth="320.0" promptText="Name the Exercise">
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </TextField>

      <!-- Purpose Section -->
      <Label alignment="CENTER" prefWidth="320.0" styleClass="header-class-two" stylesheets="@styles.css" text="Purpose:" textFill="WHITE">
         <VBox.margin>
            <Insets bottom="5.0" top="10.0" />
         </VBox.margin></Label>
      <Label alignment="CENTER" prefWidth="320.0" styleClass="label-small" stylesheets="@styles.css" text="What musclegroup is used?">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Label>

      <!-- Muscle group selection -->
      <HBox alignment="CENTER" prefWidth="200.0" styleClass="toggle-button-background" stylesheets="@styles.css">
         <children>
            <ToggleButton contentDisplay="CENTER" mnemonicParsing="false" prefWidth="60.0" selected="true" stylesheets="@styles.css" text="Legs" textFill="WHITE">
               <toggleGroup>
                  <ToggleGroup fx:id="group1" />
               </toggleGroup>
               <HBox.margin>
                  <Insets left="2.0" />
               </HBox.margin>
            </ToggleButton>
            <ToggleButton contentDisplay="CENTER" mnemonicParsing="false" prefWidth="60.0" stylesheets="@styles.css" text="Arms" textFill="WHITE" toggleGroup="$group1" />
            <ToggleButton contentDisplay="CENTER" mnemonicParsing="false" prefHeight="27.0" prefWidth="80.0" stylesheets="@styles.css" text="Abdominals" textFill="WHITE" toggleGroup="$group1" />
            <ToggleButton contentDisplay="CENTER" mnemonicParsing="false" prefWidth="60.0" stylesheets="@styles.css" text="Chest" textFill="WHITE" toggleGroup="$group1" />
            <ToggleButton contentDisplay="CENTER" mnemonicParsing="false" prefWidth="60.0" stylesheets="@styles.css" text="Back" textFill="WHITE" toggleGroup="$group1">
               <HBox.margin>
                  <Insets right="2.0" />
               </HBox.margin></ToggleButton>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>

      <!-- Mechanics Section -->
      <Label alignment="CENTER" prefWidth="320.0" styleClass="header-class-two" stylesheets="@styles.css" text="Mechanics:" textFill="WHITE">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Label>
      <Label alignment="CENTER" prefWidth="320.0" styleClass="label-small" stylesheets="@styles.css" text="Is this a compounding or isolating movement?" wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin></Label>

      <!-- Mechanics selection -->
      <HBox alignment="CENTER" prefWidth="320.0" styleClass="toggle-button-background" stylesheets="@styles.css">
         <children>
            <ToggleButton mnemonicParsing="false" prefWidth="150.0" selected="true" stylesheets="@styles.css" text="Compound" textFill="WHITE">
               <toggleGroup>
                  <ToggleGroup fx:id="group2" />
               </toggleGroup>
               <HBox.margin>
                  <Insets left="2.0" />
               </HBox.margin>
            </ToggleButton>
            <ToggleButton mnemonicParsing="false" prefWidth="150.0" stylesheets="@styles.css" text="Isolating" textFill="WHITE" toggleGroup="$group2">
               <HBox.margin>
                  <Insets right="2.0" />
               </HBox.margin></ToggleButton>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>

      <!-- Force Section -->
      <Label alignment="CENTER" prefWidth="320.0" styleClass="header-class-two" stylesheets="@styles.css" text="Force:" textFill="WHITE">
         <VBox.margin>
            <Insets bottom="5.0" top="10.0" />
         </VBox.margin></Label>
      <Label alignment="CENTER" prefWidth="320.0" styleClass="label-small" stylesheets="@styles.css" text="Are you pulling or pushing in this exercise?">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Label>
      <HBox alignment="CENTER" prefWidth="320.0" styleClass="toggle-button-background">
         <children>
            <ToggleButton mnemonicParsing="false" prefWidth="150.0" selected="true" stylesheets="@styles.css" text="Push" textFill="WHITE">
               <toggleGroup>
                  <ToggleGroup fx:id="group3" />
               </toggleGroup>
               <HBox.margin>
                  <Insets left="2.0" />
               </HBox.margin>
            </ToggleButton>
            <ToggleButton mnemonicParsing="false" prefWidth="150.0" stylesheets="@styles.css" text="Pull" textFill="WHITE" toggleGroup="$group3">
               <HBox.margin>
                  <Insets right="2.0" />
               </HBox.margin></ToggleButton>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>

      <!-- Save Button -->
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButton" prefHeight="60.0" prefWidth="320.0" styleClass="finished-button" stylesheets="@styles.css" text="SAVE">
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="15.0" />
         </VBox.margin>
      </Button>


   </children>
</VBox>
